<resources>
    <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="android:textColorPrimary">@color/textColorPrimary</item>
            <!--和 colorAccent相反，正常状态下按钮的颜色,如果我们的colorPrimary是深色，一般设置这里为白色-->
            <item name="colorControlNormal">@color/color_monitor_black</item>
<!--            &lt;!&ndash;Button按钮正常状态颜色,根据项目来定义&ndash;&gt;-->
<!--            <item name="colorButtonNormal">@color/color_monitor_white</item>-->
<!--            &lt;!&ndash;EditText 输入框中字体的颜色，colorPrimary如果设置深色，一般字体设置为白色&ndash;&gt;-->
<!--            <item name="editTextColor">@color/color_monitor_black</item>-->

        </style>

    <style name="CommonDialogStyle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="FullScreenDialog" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="LoadingDialog" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MonitorText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MonitorText.Title" parent="MonitorText">
        <item name="android:textColor">@color/color_monitor_text_primary</item>
    </style>

    <style name="MonitorText.SubTitle" parent="MonitorText">
        <item name="android:textColor">@color/color_monitor_text_primary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="MonitorText.Content" parent="MonitorText">
        <item name="android:textColor">@color/color_monitor_text_primary</item>
        <item name="android:textSize">@dimen/text_size_smaller</item>
    </style>

    <style name="MonitorText.ContentGray" parent="MonitorText">
        <item name="android:textColor">@color/color_monitor_text_gray</item>
        <item name="android:textSize">@dimen/text_size_smaller</item>
    </style>

    <style name="MonitorText.SubContent" parent="MonitorText">
        <item name="android:textColor">@color/color_monitor_text_gray_light</item>
        <item name="android:textSize">@dimen/text_size_smallest</item>
    </style>

    <style name="MonitorText.WhiteTitle" parent="MonitorText">
        <item name="android:textColor">@color/color_monitor_white</item>
    </style>

    <style name="MonitorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dimen_button_height</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MonitorButton.Blue" parent="MonitorButton">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textColor">@color/color_monitor_white</item>
    </style>

    <style name="MonitorButton.BlueHalf" parent="MonitorButton">
        <item name="android:background">@color/color_monitor_blue</item>
        <item name="layout_constraintWidth_percent">0.5</item>
        <item name="android:textColor">@color/color_monitor_white</item>
    </style>

    <style name="MonitorButton.White" parent="MonitorButton">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textColor">@color/color_monitor_text_blue</item>
    </style>

    <style name="BottomDialog" parent="CommonDialogStyle">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/BottomDialog.AnimationStyle</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="BottomDialog.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>
</resources>