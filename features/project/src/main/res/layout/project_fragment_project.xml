<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.leevinapp.monitor.project.domain.model.ProjectType" />

        <variable
            name="viewModel"
            type="com.leevinapp.monitor.project.ui.ProjectViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:visible="@{!viewModel.projects.empty}">

            <LinearLayout
                android:id="@+id/ll_container_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_common_margin"
                android:layout_marginTop="@dimen/dimen_common_margin"
                android:background="@drawable/background_gray_shape"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_common_margin_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:visible="@{viewModel.projectType == ProjectType.SUB_INSTITUTION_PROJECT}"
                tools:visibility="visible">

                <TextView
                    style="@style/MonitorText.ContentGray"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="选择下级机构进行筛选"
                    android:textColor="@color/color_monitor_text_gray_hint" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="@color/color_monitor_text_gray_hint" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_project_title"
                style="@style/MonitorText.ContentGray"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_common_margin"
                android:layout_marginTop="@dimen/dimen_common_margin_10"
                android:background="@color/color_monitor_white"
                android:text="@{viewModel.projectType == ProjectType.MINE_PROJECT?@string/project_mine_project_title(viewModel.projects.size):@string/project_sub_institution_project_title(viewModel.projects.size)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_container_search"
                tools:text="下级机构项目共计32个" />

            <TextView
                android:id="@+id/tv_normal_count"
                android:layout_width="@dimen/dimen_circle"
                android:layout_height="@dimen/dimen_circle"
                android:background="@drawable/project_circle_normal"
                android:gravity="center"
                android:textColor="@color/color_monitor_white"
                app:layout_constraintStart_toStartOf="@+id/tv_project_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_project_title"
                tools:text="5" />

            <TextView
                android:id="@+id/tv_normal_desc"
                style="@style/MonitorText.ContentGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="正常"
                app:layout_constraintBottom_toBottomOf="@+id/tv_normal_count"
                app:layout_constraintStart_toEndOf="@+id/tv_normal_count"
                app:layout_constraintTop_toTopOf="@+id/tv_normal_count" />

            <View
                android:id="@+id/divider_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_divider"
                android:layout_marginTop="@dimen/dimen_common_margin"
                android:background="@color/color_monitor_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_normal_count" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="@dimen/dimen_common_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_top"
                tools:listitem="@layout/project_item_project" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            layout="@layout/project_layout_empty"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visible="@{viewModel.projects.empty}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>